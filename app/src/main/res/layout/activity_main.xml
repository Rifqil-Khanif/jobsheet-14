<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO"
            android:backgroundTint="#B5FF0000"
            android:layout_marginRight="70dp" />
        <Button
            android:id="@+id/btnTpfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B5000000"
            android:text="TPFL" />

        <Button
            android:id="@+id/btnPplg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPLG"
            android:backgroundTint="#B5FF5100"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnKuliner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuliner"
            android:backgroundTint="#B5959595"
            android:layout_marginRight="100dp" />
        <Button
            android:id="@+id/btnBusana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busana"
            android:backgroundTint="#B5BD01D1"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>

</LinearLayout>